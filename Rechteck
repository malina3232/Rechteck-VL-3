<body>
	<?php
	// Berechnung der Funktionswerte und Ausgabe in Tabelle
	echo "<table>";
	echo "<tr><th>Y</th><th>X</th></tr>";
	for ($x=-5; $x<=5; $x++) {
		$y = 3*$x + 2;
		echo "<tr><td>$y</td><td>$x</td></tr>";
	}
	echo "</table>";
	?>
